{
  "compilerOptions": {
    "incremental": true,
    "target": "es2018",
    "module": "commonjs",
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,    
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,  
    "baseUrl": "./"
  },
  "exclude": ["node_modules"]
}
